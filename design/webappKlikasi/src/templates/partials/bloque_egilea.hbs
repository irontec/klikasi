---
component : bloque-egilea
---
<section class ='bloque-egilea aire col-xs-12' >
	<div class ='col-xs-12 col-sm-10'>
		<figure class = 'col-xs-6 col-sm-4 col-md-3 col-xs-offset-3 col-sm-offset-0 text-center'>
			<img class = 'img-circle' src = '{{imagen}}' alt = '{{alt}}'/>
		</figure>
		<div class = 'col-xs-12 col-sm-8 col-md-9'>
			<h1>{{nombre}}</h1>
			<ul>
				<li class = 'no-pad-l italic'>{{puesto}}</li>
				<li class = 'no-border'>{{centro}}</li>
			</ul>
			{{{text}}}
		</div>
	</div>
	<ul class = 'actions col-xs-12 col-sm-2 pull-right'>
		{{#if editable}}
			<button class = 'button-icon'><i class = 'fa fa-pencil'></i>Editatu</button>
		{{else}}
			<button class = 'button-icon'><i class = 'fa fa-envelope'></i>Kontaktatu</button>
		{{/if}}
	</ul>
</section>